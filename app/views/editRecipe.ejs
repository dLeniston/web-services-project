<% include header %>
<div class="container form-div">
    <div class="row">
        <h1 style="text-align: center;"><i class="fa fa-edit"></i>Edit <%= recipe.name %></h1>
        <div style="width: 80%; margin: 30px auto;">

        <form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="recipe[name]" value="<%= recipe.name %>">
            </div>
            <div class="form-group">
                <label for="img">Image URL</label>
                <input class="form-control" type="text" name="recipe[img]" value="<%= recipe.img %>">
            </div>
            <div class="form-group">
                <label for="ingredients">Ingredients</label>
                <input class="form-control" type="text" name="recipe[ingredients]" value="<%= recipe.ingredients %>">
            </div>
            <div class="form-group">
                <label for="instructions">Instructions</label>
                <textarea class="form-control" name="recipe[instructions]" rows="10" cols="30"><%= recipe.instructions %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/">Go Back</a>
        </div>

    </div>
</div>

<% include footer %>