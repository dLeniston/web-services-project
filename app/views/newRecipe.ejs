<% include header%>

  <div class="container form-div">
    <div class="row">
        <h1 style="text-align: center;"><i class="fa fa-pencil-alt"></i>Create a New Recipe</h1>
        <div style="width: 80%; margin: 30px auto;">

        <form action="/recipes" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="name" placeholder="Pancakes">
            </div>
            <div class="form-group">
                <label for="img">Image URL</label>
                <input class="form-control" type="text" name="img" placeholder="https://pictures.com/pic.jpg">
            </div>
            <div class="form-group">
                <label for="ingredients">Ingredients</label>
                <input class="form-control" type="text" name="ingredients" placeholder="500g White Flour, 2 Eggs, 500ml Milk">
            </div>
            <div class="form-group">
                <label for="instructions">Instructions</label>
                <textarea class="form-control" name="instructions" rows="10" cols="30" placeholder="Mix flour with egg and milk, stir, pour thin layer on hot pan and flip after 2 mins"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/">Go Back</a>
        </div>

    </div>
</div>

<% include footer %>