<% include header%>

<div class = "container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">RecipeApp</p>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= recipe.img %>">
                <div class="caption-full">
                    <h4 class="pull-right">Ingredients: <%= recipe.ingredients %></h4>
                    <h4><a href=""><%= recipe.name %></a></h4>
                    <p>
                         <h2>Instructions</h2>
                         <%= recipe.instructions %>
                    </p>
                    <p>
                        <em>Submitted By <%=recipe.author.username %>, <%= recipe.created_date.toDateString() %></em>
                    </p>
                    <% if(currentUser && recipe.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-warning" href="/recipe/<%= recipe._id %>/edit">Edit</a>
                        <form class="delete-form" action="/recipe/<%= recipe._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/recipes/<%= recipe._id %>/comments/new" >Add New Comment</a>
                </div>
                <hr>
                <% recipe.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
                             <p>
                                    <%= comment.text %>
                             </p>
                             <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                 <a class="btn btn-xs btn-warning" 
                                    href="/recipes/<%=recipe._id %>/comments/<%= comment._id %>/edit">
                                    Edit
                                </a>
                                <form class="delete-form" action="/recipes/<%=recipe._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                   <input class="btn btn-xs btn-danger" type="submit" value="Delete">
                                </form>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<% include footer %>