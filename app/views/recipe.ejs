<% include header%>

<div class = "container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">RecipeApp</p>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= recipe.img %>">
                <div class="caption-full">
                    <h4 class="pull-right"><%= recipe.ingredients %></h4>
                    <h4><a href=""><%= recipe.name %></a></h4>
                    <p>
                        <%= recipe.instructions %>
                    </p>
                        <a class="btn btn-warning" href="/recipe/<%= recipe._id %>/edit">Edit</a>
                        <form class="delete-form" action="/recipe/<%= recipe._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                </div>
            </div>
        </div>
    </div>
</div>

<% include footer %>